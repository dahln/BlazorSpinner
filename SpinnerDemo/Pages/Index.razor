@page "/"
@inject BlazorSpinner.SpinnerService _spinnerService

<h1>BlazorSpinner Demo</h1>

<input type="button" value="Start Loading Spinner (5 second demo)" class="btn btn-primary" @onclick="StartSpinner" />

<p>
    A normal usage of this loader would involve calling .Show() at the beginning of an API (or other potential long running task).
</p>
<p>
    Call .Hide() at the end of the long running rask.
</p>


<p>

</p>

@code {
    async public Task StartSpinner()
    {
        _spinnerService.Show();

        await Task.Delay(5000);

        _spinnerService.Hide();
    }
}